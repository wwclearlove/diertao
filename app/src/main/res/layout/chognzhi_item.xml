<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:id="@+id/chongzhi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/zhonghua"/>
        <LinearLayout
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chongzhi_chepai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="川A0000001"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/chongzhi_chezhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车主：张三"
                android:textSize="20dp"
                />
        </LinearLayout>

        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:id="@+id/chongzhi_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额：100"
            />

        <CheckBox
            android:layout_marginRight="30dp"
            android:id="@+id/chognzhi_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/chognzhi_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>



</LinearLayout>